#include <stdio.h>
#include <math.h>

int main()
{
    double a = 0, b = 0, c = 0, delta = 0,resultado_mais = 0, resultado_menos = 0;

printf("Qual o coeficente de a:");
scanf("%lf",&a);

printf("Qual o coeficente de b:");
scanf("%lf",&b);

printf("Qual o coeficiente de c:");
scanf("%lf",&c);

delta = b*b-4*a*c;

if (delta = 0){
printf("delta menor que 0, entao a equacao nao possui resultados reais");
}
else{
printf("%5lf*%5lf-4*%5lf*%5lf=%5lf\n",b,b,a,c,delta);
resultado_mais = -b + sqrt(delta)/2*a;
resultado_menos = -b - sqrt(delta)/2*a;

printf("-%5lf + raiz de %5lf / 2*%5lf = %5lf\n",b,delta,a,resultado_mais);
printf("-%5lf - raiz de %5lf / 2*%5lf = %5lf\n",b,delta,a,resultado_menos);
}
return(0);
}



